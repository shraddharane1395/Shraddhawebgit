pipeline{
agent any
  environment {
  ToolName='Jenkins'
  }
  stages{
    stage("Condition"){
      steps{
        script{
          for(int i=0;i<5;i++){
            println(i)
          }
          int buildnumber= "$BUILD_NUMBER"
          if(buildnumber %2==0){
            echo 'This is an Even Number'
          }
          else{
            echo 'This is an Odd Number'
          }
        }
      }
    }
  }
}
